<h1> <%= @store.name %> </h1>
  <div class="row">
    <div class="col-sm-12">
      <h2>Brands that this store carries: </h2>
      <% if @store.brands().any?() %>
      <ul>
      <% @store.brands.each do |brand| %>
      <li><%= brand.name() %></li>
      <% end %>
      </ul>
      <% else %>
      <p> This store is not carrying any brands yet.</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <p><a class="btn btn-warning btn-lg" href="/stores/<%= @store.id() %>/edit">Edit <%= @store.name %></a></p>
    </div>
    <div class="col-sm-4">
      <form action="/stores/<%= @store.id() %>" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" class="btn btn-danger btn-lg">Delete <%= @store.name %></button>
      </form>
    </div>
    <div class="col-sm-4">
      <p><a class="btn btn-default btn-lg" href="/stores">Back to Stores</a></p>
    </div>
  </div>
